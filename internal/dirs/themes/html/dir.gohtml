<!DOCTYPE html>
<html class="noScroll">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link href="/css/doc.css" rel="stylesheet">
    <link href="/css/files.css" rel="stylesheet">
    <link href="/css/upload.css" rel="stylesheet">
    <link href="/css/info.css" rel="stylesheet">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üìÅ</text></svg>">

    <title>{{.CurrentDir}}</title>

    <head></head>

    <body>
        <div id="scroller">
            <table class="files">
                <thead>
                    <tr>
                        <th>
                            <div id="path">{{range $part := .PathParts}}
                                <a href="{{$part.Path}}" title="{{$part.Path}}">
                                    <span class="filename">{{$part.Dir}}</span>
                                    <span>/</span>
                                </a>{{end}}
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody>{{range $ent := .Dirs}}
                    <tr>
                        <th title="{{$ent.Name}}">
                            <a class="file dir" href="{{$ent.Name}}/">
                                <span class="filename">üìÅ&nbsp{{$ent.Name}}</span>
                            </a>
                        </th>
                    </tr>{{end}}{{range $ent := .Files}}
                    <tr>
                        <th title="{{$ent.Name}}">
                            <a class="file" href="{{$ent.Name}}">
                                <span class="filename">üìÑ&nbsp{{$ent.Name}}</span>
                            </a>
                        </th>
                    </tr>{{end}}
                    <tr class="last-row"><td>&nbsp</td></tr>
                </tbody>
            </table>

            <table class="info">
                <thead>
                    <tr>{{ $sort := .Params.Get "sortBy" }}
                        <th class="sortable" title="Sort by size">
                            <a href="{{.Path}}?sortBy={{ if eq $sort "size" }}size_desc{{else}}size{{end}}">
                                <span>{{ if eq $sort "size" }}
                                    üîº Size{{ else if eq $sort "size_desc" }}
                                    üîΩ Size{{ else }}
                                    Size{{ end }}
                                </span>
                            </a>
                        </th>
                        <th class="sortable" title="Sort by modification time">
                            <a href="{{.Path}}?sortBy={{ if eq $sort "time" }}time_desc{{else}}time{{end}}">
                                <span>{{ if eq $sort "time" }}
                                    üîº Last Modified{{ else if eq $sort "time_desc" }}
                                    üîΩ Last Modified{{ else }}
                                    Last Modified{{ end }}
                                </span>
                            </a>
                        </th>
                        <th>Permissions</th>
                    </tr>
                </thead>
                <tbody>{{range $ent := .Dirs}}
                    <tr>
                        <td></td>
                        <td>{{formatTime $ent.ModTime}}</td>
                        <td>{{formatMode $ent.Mode}}</td>
                    </tr>{{end}}{{range $ent := .Files}}
                    <tr>
                        <td>{{formatSize $ent.Size}}</td>
                        <td>{{formatTime $ent.ModTime}}</td>
                        <td>{{formatMode $ent.Mode}}</td>
                    </tr>{{end}}
                    <tr class="last-row"><td>&nbsp</td></tr>
                </tbody>
            </table>
        </div>
        <label for="toggle-upload-modal" id="upload-open">üìù&nbspUpload here</label>
        <div id="upload-modal">
            <input type="checkbox" id="toggle-upload-modal">
            <label class="overlay" for="toggle-upload-modal"></label>
            <form id="upload-dialog" enctype="multipart/form-data" action="{{.Path}}?upload" method="post">
                <input id="upload-picker" type="file" name="files" multiple required />
                <input id="upload-submit" type="submit" value="Upload" />
                <label id="upload-close" for="toggle-upload-modal">Cancel</label>
            </form>
        </div>
    </body>
</html>
